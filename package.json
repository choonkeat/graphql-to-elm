{
  "name": "graphql-to-elm",
  "version": "0.9.0",
  "description": "Generates Elm types, encoders and decoders from GraphQL queries",
  "author": "Harm Boschloo",
  "repository": {
    "type": "git",
    "url": "git://github.com/harmboschloo/graphql-to-elm.git"
  },
  "homepage": "https://github.com/harmboschloo/graphql-to-elm",
  "keywords": [
    "graphql",
    "elm",
    "generator"
  ],
  "license": "BSD-3-Clause",
  "files": [
    "lib",
    "src",
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rimraf lib && tsc",
    "build-examples": "cd examples/basic && npm run build && cd ../basic2 && npm run build && cd ../features && npm run build && cd ../readme && npm run build",
    "test": "npm run test-elm && tape -r ts-node/register tests/gen/test-*/start.ts | tap-diff",
    "test-elm": "elm-test tests/GraphQL",
    "test-options": "tape -r ts-node/register tests/gen/test-options/start.ts | tap-diff",
    "test-gen": "tape -r ts-node/register tests/gen/test-gen/start.ts | tap-diff",
    "test-gen-update": "tape -r ts-node/register tests/gen/test-gen/update.ts | tap-diff",
    "test-browser": "tape -r ts-node/register tests/gen/test-browser/start.ts | tap-diff",
    "format": "npm run format-js && npm run format-elm && npm run format-gql",
    "format-js": "prettier --write index.* \"./{src,tests,examples}/**/*.{js,ts}\"",
    "format-elm": "elm-format --yes --elm-version 0.19 ./src ./tests ./examples",
    "format-gql": "prettier --write \"./{src,tests,examples}/**/*.gql\"",
    "validate": "yarn validate-js && yarn validate-elm && yarn validate-gql",
    "validate-js": "prettier -l index.* \"./{src,tests,examples}/**/*.{js,ts}\"",
    "validate-elm": "elm-format --validate --elm-version 0.19 ./src ./tests ./examples",
    "validate-gql": "prettier -l \"./{src,tests,examples}/**/*.gql\"",
    "prepublishOnly": "npm run validate && npm run build && npm run build-examples && npm run test"
  },
  "dependencies": {
    "graphql": "^14.1.1",
    "mkdirp": "^1.0.3"
  },
  "devDependencies": {
    "@detools/tap-diff": "^0.2.2",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.7.4",
    "@types/phantom": "^3.2.5",
    "@types/rimraf": "^2.0.3",
    "@types/tape": "^4.2.34",
    "apollo-server-express": "^2.10.1",
    "elm": "^0.19.1-3",
    "elm-format": "^0.8.2",
    "elm-test": "^0.19.1-revision2",
    "express": "^4.17.1",
    "phantom": "^6.3.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "tape": "^4.13.0",
    "tree-kill": "^1.2.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  }
}
